{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "enables the default permissions",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "keyring:default",
    "dialog:default",
    "fs:default",
    "fs:allow-write-file",
    {
      "identifier": "fs:allow-exists",
      "allow": [
        { "path": "$HOME/.noornote" },
        { "path": "$HOME/.noornote/**/*" }
      ]
    },
    {
      "identifier": "fs:allow-read-text-file",
      "allow": [
        { "path": "$HOME/.noornote" },
        { "path": "$HOME/.noornote/**/*" }
      ]
    },
    {
      "identifier": "fs:allow-write-text-file",
      "allow": [
        { "path": "$HOME/.noornote" },
        { "path": "$HOME/.noornote/**/*" }
      ]
    },
    {
      "identifier": "fs:allow-mkdir",
      "allow": [
        { "path": "$HOME/.noornote" },
        { "path": "$HOME/.noornote/**/*" }
      ]
    },
    "http:default",
    "http:allow-fetch",
    {
      "identifier": "http:default",
      "allow": [
        {
          "url": "https://*"
        }
      ]
    },
    "shell:default",
    "shell:allow-open"
  ]
}
